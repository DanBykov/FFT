<li>
	<div class="li-img">
		<%= link_to image_tag(game.name + ".jpg"), Game.find_by_name(game.name) %>
	</div>
	<div class="li-text">
		<h4 class="li-head"><%= link_to game.name.gsub('-',' '), Game.find_by_name(game.name) %></h4>	
		Rating: <%= game.rate_average.round(2).to_s.sub(".0","") %>/5
	</div>
</li>